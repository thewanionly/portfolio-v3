    <footer
      class="my-12 bg-white border-t sm:mt-20 dark:bg-neutral-950 border-neutral-200 dark:border-neutral-800"
    >
      <div
        class="container flex flex-col gap-4 items-center py-8 mx-auto px-7 max-w-7xl sm:flex-row sm:justify-between"
      >
        <p
          class="mt-4 text-sm text-neutral-700 dark:text-neutral-100 sm:border-neutral-300 dark:sm:border-neutral-700 sm:mt-0"
        >
