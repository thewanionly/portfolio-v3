---
import Layout from "../layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { ModeToggle } from "@/components/ModeToggle";
import { Icon } from "astro-icon/components";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Elloani Ross Pitogo | Software Engineer">
  <header class="relative z-20 w-full max-w-4xl mx-auto mt-8 px-7 xl:px-0">
    <ModeToggle client:load />
  </header>
  <main
    class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <h1
      class="mb-5 text-4xl font-bold leading-tight md:text-4xl lg:text-6xl dark:text-white"
    >
      {t("hero.title")}
    </h1>
    <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
      {t("hero.description")}
    </p>
    <div class="flex gap-4">
      <a href="https://github.com/thewanionly/" target="_blank">
        <Icon name="github" class="text-2xl" />
      </a>
      <a href="https://www.linkedin.com/in/pitogoelloaniross/" target="_blank">
        <Icon name="linkedin" class="text-2xl" />
      </a>
    </div>
  </main>
</Layout>
